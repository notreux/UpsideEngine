local TextTag = require(script.Parent.TextTag)

return function()
    describe("TextTag", function()
        it("should initialize with default properties", function()
            local tag = TextTag.new()
            expect(tag.TagName).to.equal("default")
            expect(tag.TypingSoundId).to.equal("rbxassetid://92143495194538")
            expect(tag.DisplayMode).to.equal("letter")
        end)
        
        it("should set tag name correctly", function()
            local tag = TextTag.new()
            tag:SetTagName("newTag")
            expect(tag.TagName).to.equal("newTag")
            local success = pcall(function()
                tag:SetTagName(123)
            end)
            expect(success).to.equal(false)
        end)

        it("should set display mode correctly", function()
            local tag = TextTag.new()
            tag:SetDisplayMode("word")
            expect(tag.displayMode).to.equal("word")
            local success = pcall(function()
                tag:SetDisplayMode("invalid")
            end)
            expect(success).to.equal(false)
        end)
        
        it("should call TextTagService methods on destroy", function()
            local tag = TextTag.new()
            tag:Destroy()
            expect(true).to.equal(true)
        end)
    end)
end